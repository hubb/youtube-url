!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title= title
    %meta{:name => "description", :content => "Youtube URL exporter"}
    %meta{:name => "author", :content => "Thibault Gautriaud"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}

    /[if lt IE 9]
      %script{:src => "http://html5shim.googlecode.com/svn/trunk/html5.js"}

    / Le styles
    %link{:href => "css/bootstrap.css", :type => "text/css", :rel => "stylesheet"}
    %link{:href => "css/styles.css", :type => "text/css", :rel => "stylesheet"}

    / Le fav and touch icons
    %link{:rel => "apple-touch-icon", :href => "/bootstrap/images/apple-touch-icon.png"}
    %link{:rel => "shortcut icon", :href => "/bootstrap/images/favicon.ico"}
    %link{:rel => "apple-touch-icon", :sizes => "72x72", :href => "/bootstrap/images/apple-touch-icon-72x72.png"}
    %link{:rel => "apple-touch-icon", :sizes => "114x114", :href => "/bootstrap/images/apple-touch-icon-114x114.png"}

  %body

    = haml :navbar

    - if logged_in?
      %div.container= yield
    - else
      %div.jumbotron
        %div.container
          %h1 Hello, world!
          %p Please login!
          %p
            %a.btn.btn-primary.btn-lg Login

    / Le js
    %script{:type => "text/javascript", :src =>"js/jquery-2.0.3.js"}
    %script{:type => "text/javascript", :src =>"js/bootstrap.js"}
